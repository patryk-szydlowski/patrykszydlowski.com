{
  "overrides": [
    {
      "extends": ["canonical", "canonical/module", "canonical/prettier"],
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "plugins": ["simple-import-sort"],
      "rules": {
        "arrow-body-style": ["error", "as-needed"],
        "canonical/destructuring-property-newline": "off",
        "canonical/import-specifier-newline": "off",
        "import/extensions": "off",
        "import/order": "off",
        "simple-import-sort/exports": "error",
        "simple-import-sort/imports": "error",
        "unicorn/text-encoding-identifier-case": "off"
      }
    },
    {
      "extends": ["canonical/typescript", "canonical/prettier"],
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "rules": {
        "@typescript-eslint/no-use-before-define": ["error", { "variables": false }]
      }
    },
    {
      "extends": ["canonical/react", "canonical/jsx-a11y"],
      "files": ["*.jsx", "*.tsx"]
    },
    {
      "extends": ["canonical/jest"],
      "files": ["*.test.ts", "*.test.tsx"]
    },
    {
      "extends": ["canonical/node"],
      "files": ["*.config.js"],
      "rules": {
        "import/order": "error",
        "jsdoc/valid-types": "off",
        "unicorn/prefer-module": "off"
      }
    },
    {
      "extends": ["canonical/yaml"],
      "files": ["*.yml", "*.yaml"]
    },
    {
      "extends": ["canonical/json"],
      "files": ["*.json"],
      "rules": {
        "jsonc/array-bracket-newline": ["error", "consistent"],
        "jsonc/array-element-newline": ["error", "consistent"],
        "jsonc/object-curly-spacing": ["error", "always"]
      }
    },
    {
      "files": ["package.json"],
      "rules": {
        "jsonc/sort-keys": [
          "error",
          {
            "order": [
              "name",
              "description",
              "version",
              "private",
              "sideEffects",
              "author",
              "repository",
              "readme",
              "bugs",
              "engines",
              "scripts",
              "dependencies",
              "devDependencies"
            ],
            "pathPattern": "^$"
          },
          {
            "order": { "type": "asc" },
            "pathPattern": ".*"
          }
        ]
      }
    }
  ]
}
